setopt \
  autocd \
  completeinword \
  correct \
  extendedglob \
  null_glob \
  extendedhistory \
  hashlistall \
  histexpiredupsfirst \
  histfindnodups \
  histignorealldups \
  histignorespace \
  histlexwords \
  histreduceblanks \
  incappendhistorytime \
